#!/bin/bash
# Project Scaffolding Script
# Usage: new-project <project-name>

set -e

WORKSPACE="/data/ai-projects"
TEMPLATE="$WORKSPACE/templates/project-template"
PROJECTS_DIR="$WORKSPACE/active-projects"

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Check arguments
if [ $# -eq 0 ]; then
    echo -e "${RED}Error: Project name required${NC}"
    echo "Usage: new-project <project-name>"
    exit 1
fi

PROJECT_NAME="$1"
PROJECT_DIR="$PROJECTS_DIR/$PROJECT_NAME"

# Check if project already exists
if [ -d "$PROJECT_DIR" ]; then
    echo -e "${RED}Error: Project '$PROJECT_NAME' already exists${NC}"
    exit 1
fi

# Create project from template
echo -e "${YELLOW}Creating project: $PROJECT_NAME${NC}"
cp -r "$TEMPLATE" "$PROJECT_DIR"

# Initialize git
cd "$PROJECT_DIR"
git init
echo -e "${GREEN}âœ“ Git repository initialized${NC}"

# Update template placeholders
DATE=$(date +%Y-%m-%d)
sed -i "s/\[Project Name\]/$PROJECT_NAME/g" *.md research/*.md
sed -i "s/Project Name/$PROJECT_NAME/g" README.md
sed -i "s/YYYY-MM-DD/$DATE/g" README.md session-summary.md

echo -e "${GREEN}âœ“ Template files customized${NC}"

# Initial commit
git add .
git commit -m "Initial commit: $PROJECT_NAME project scaffold

Created from template on $DATE
Context files initialized for Claude, Gemini, and agents.

ðŸ¤– Generated with Claude Code"

echo -e "${GREEN}âœ“ Initial commit created${NC}"

# Summary
echo ""
echo -e "${GREEN}Project '$PROJECT_NAME' created successfully!${NC}"
echo ""
echo "Location: $PROJECT_DIR"
echo ""
echo "Quick start:"
echo "  cd $PROJECT_DIR"
echo "  claude          # Start with Claude"
echo "  gemini          # Start with Gemini"
echo "  opencode        # Start with OpenCode"
echo ""
echo "Next steps:"
echo "  1. Edit claude.md and gemini.md with project details"
echo "  2. Update README.md with objectives"
echo "  3. Start your first session"
echo ""
